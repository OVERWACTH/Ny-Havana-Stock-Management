{% extends 'base.html.twig' %}

{% block title %}Dashboard - Ny HAVANA{% endblock %}

{% block content %}
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
    </ol>
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">CR (Demande de materiel)</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <i class="fas fa-file-alt fa-3x me-3"></i>
                    <a class="small text-white stretched-link"  href="{{ path('app_c_r_index') }}"></a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">Fiche de stock</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <i class="fas fa-clipboard-list fa-3x me-3"></i>
                    <a class="small text-white stretched-link" href="{{ path('app_fiche_de_stock_index') }}"></a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">Materiel en stock</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                <i class="fas fa-boxes fa-3x me-3"></i>    
                    <a class="small text-white stretched-link" href="{{ path('app_stock_index') }}"></a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">Materièls en réparation</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <i class="fas fa-tools fa-3x me-3"></i>
                    <a class="small text-white stretched-link" href="{{ path('app_reparation_index') }}"></a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area me-1"></i>
                    Area Chart Example
                </div>
                <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Bar Chart Example
                </div>
                <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
    </div>
    
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="js/datatables-simple-demo.js"></script>
{% endblock %}
